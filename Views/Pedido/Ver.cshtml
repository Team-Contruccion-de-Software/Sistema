
@{
    ViewBag.Title = "Ver";
    Layout = "~/Views/Shared/LayoutUsuario.cshtml";
    List<Sistema_GGYM.Models.Base_De_Datos.DETALLE_PEDIDO> detalle_pedido = ViewBag.Pedidos;
    string total = "";
}

<div class="content">
    <div class="container">

        <!--Row del boton para agregar nuevo-->
        <div class="row">
            <div class="col-sm-6">
                <div class="m-b-30">
                    <a class="btn btn-custom waves-effect waves-light" href="~/Pedido/Index"><i class="fa fa-arrow-left"></i>  Volver</a>
                </div>
            </div>
        </div>

        <!--Row de listado de los datos-->
        <div class="row">
            <div class="col-sm-12">
                <div class="card-box table-responsive">

                    <h2 class="header-title m-t-0 m-b-30"><i class="fa fa-book"></i> Lista de pedidos</h2>

                    <table id="datatable-buttons" class="table table-striped table-bordered">
                        <thead class="bg-custom">
                            <tr>
                                <th class="text-white">ID</th>
                                <th class="text-white">Codigo</th>
                                <th class="text-white">Imagen</th>
                                <th class="text-white">Descripcion</th>
                                <th class="text-white">Precio</th>
                                <th class="text-white">Cantidad</th>
                                <th class="text-white">Subtotal</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var d in detalle_pedido)
                            {
                                <tr>
                                    <td>@d.ID_DETALLE_PEDIDO</td>
                                    <td>@d.PRODUCTO.CODIGO</td>
                                    <td><img src="@(d.PRODUCTO.IMAGEN)" height="100" /></td>
                                    <td>@d.PRODUCTO.DESCRIPCION</td>
                                    <td>S/. @d.PRODUCTO.PRECIO</td>
                                    <td>@d.CANTIDAD</td>
                                    <td>@d.SUBTOTAL</td>
                                </tr>
                            }
                        </tbody>
                        <tbody>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td><strong>TOTAL</strong></td>
                                @foreach (var d in detalle_pedido)
                                {
                                    total = d.PEDIDO.TOTAL.ToString();
                                }
                                <td><strong>@total</strong></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!--Efecto de seleccion-->
<script src="~/Source/js/Indices.js"></script>

<!--Lectura imagenes de perfil-->
<script src="~/Source/js/ImagenDePerfil.js"></script>
