
@{
    Layout = null;
    Sistema_GGYM.Models.Base_De_Datos.USUARIO usuario = new Sistema_GGYM.Models.Base_De_Datos.USUARIO().ObtenerUsuario((Sistema_GGYM.Models.SessionHelper.GetUser()));
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <title id="Titulo">Pagina principal</title>

    <!--calendar css-->
    <link href="~/Source/User/plugins/fullcalendar/dist/fullcalendar.css" rel="stylesheet" />

    <!--Morris Chart CSS -->
    <link rel="stylesheet" href="~/Source/User/plugins/morris/morris.css">


    <!-- App css -->
    <link href="~/Source/User/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Source/User/css/core.css" rel="stylesheet" type="text/css" />
    <link href="~/Source/User/css/components.css" rel="stylesheet" type="text/css" />
    <link href="~/Source/User/css/icons.css" rel="stylesheet" type="text/css" />
    <link href="~/Source/User/css/pages.css" rel="stylesheet" type="text/css" />
    <link href="~/Source/User/css/menu.css" rel="stylesheet" type="text/css" />
    <link href="~/Source/User/css/responsive.css" rel="stylesheet" type="text/css" />

    <!--venobox lightbox-->
    <link rel="stylesheet" href="~/Source/User/plugins/magnific-popup/dist/magnific-popup.css" />


    <script src="~/Source/User/js/modernizr.min.js"></script>
    <link rel="shortcut icon" href="~/Source/images/ggymlogo.png">

</head>


<body class="fixed-left">

    <div id="wrapper">

        <div class="topbar">

            <!-- LOGO -->
            <div class="topbar-left">
                <a href="index.html" class="logo"><span>GG<span>YM</span></span><i class="zmdi zmdi-layers"></i></a>
            </div>

            <div class="navbar navbar-default" role="navigation">
                <div class="container">

                    <ul class="nav navbar-nav navbar-left">
                        <li>
                            <button class="button-menu-mobile open-left">
                                <i class="zmdi zmdi-menu"></i>
                            </button>
                        </li>
                        <li>
                            <h4 class="page-title">Sistema</h4>
                        </li>
                    </ul>


                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <div class="notification-box">
                                <ul class="list-inline m-b-0">
                                    <li>
                                        <a href="javascript:void(0);" class="right-bar-toggle">
                                            <i class="zmdi zmdi-T`H`E`M`E`L`O`C`K`.`C`O`M`-none"></i>
                                        </a>
                                        <div class="noti-dot">
                                            <span class="dot"></span>
                                            <span class="pulse"></span>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li class="hidden-xs">
                            <form role="search" class="app-search">
                                <input type="text" placeholder="Buscar..."
                                       class="form-control">
                                <a href=""><i class="fa fa-search"></i></a>
                            </form>
                        </li>
                    </ul>

                </div>
            </div>
        </div>

        <div class="left side-menu">
            <div class="sidebar-inner slimscrollleft">

                <!-- Barra lateral del usuario -->
                <div class="user-box">
                    <div class="user-img">

                        <img id="ImagenPefil" src="" alt="user-img" title="Mat Helme" class="img-circle img-thumbnail img-responsive">

                        <div class="user-status offline"><i class="zmdi zmdi-dot-circle"></i></div>

                    </div>

                    <h5>
                        <a id="usuario" href="#" data-toggle="modal" data-target="#con-close-modal" onclick="editar(@usuario.ID_USUARIO)">
                            @usuario.NOMBRE @usuario.APELLIDO
                        </a>
                    </h5>



                    @if (usuario.TIPO_USUARIO.IDTIPOUSUARIO == 1)
                    {
                        <small class="text-primary"><b>@usuario.TIPO_USUARIO.DESCRIPCION </b><i class="ti ti-user"></i></small>
                    }
                    else if (usuario.TIPO_USUARIO.IDTIPOUSUARIO == 2)
                    {
                        <small class="text-success"><b>@usuario.TIPO_USUARIO.DESCRIPCION </b><i class="ti ti-crown"></i></small>
                    }
                    else if (usuario.TIPO_USUARIO.IDTIPOUSUARIO == 3)
                    {
                        <small class="text-warning"><b>@usuario.TIPO_USUARIO.DESCRIPCION </b><i class="ti ti-basketball"></i></small>
                    }


                    <ul class="list-inline">
                        <li>
                            <a href="~/Default" class="text-custom">
                                <i class="fa fa-home fa-fw"></i>
                            </a>
                        </li>

                        <li>
                            <a href="~/Login/Logout" class="text-custom">
                                <i class="zmdi zmdi-power"></i>
                            </a>
                        </li>
                    </ul>

                </div>
                <!-- End User -->
                <!--- Sidemenu -->
                <div id="sidebar-menu">
                    <ul>
                        <li class="text-muted menu-title">Navegación</li>

                        <li>
                            <a href="~/Usuario/Index" id="Indice1" class="waves-effect"><i class="zmdi zmdi-view-dashboard"></i> <span> Inicio </span> </a>
                        </li>

                        @if (usuario.TIPO_USUARIO.IDTIPOUSUARIO == 3)
                        {
                            <li>
                                <a href="~/Usuario/CoachHorario" id="Indice2" class="waves-effect"><i class="ti ti-alarm-clock"></i><span> Horarios </span></a>
                            </li>
                        }
                        else if (usuario.TIPO_USUARIO.IDTIPOUSUARIO == 2)
                        {
                            <li>
                                <a href="~/Usuario/Horario" id="Indice3" class="waves-effect"><i class="ti ti-alarm-clock"></i><span> Horarios </span></a>
                            </li>

                            <li>
                                <a href="~/Usuario/Calendario" id="Indice4" class="waves-effect"><i class="zmdi zmdi-calendar"></i><span> Calendario </span></a>
                            </li>

                            <li>
                                <a href="~/Seguimiento/Seguimiento" id="Indice5" class="waves-effect"><i class="zmdi zmdi-trending-up"></i><span> Seguimiento </span></a>
                            </li>
                        }

                        <li>
                            <a href="~/Ejercicio/Ejercicio" id="Indice6" class="waves-effect"><i class="fa fa-heartbeat"></i><span> Ejercicios rutinas </span></a>
                        </li>

                        <li>
                            <a href="~/Dietas/Dieta" id="Indice7" class="waves-effect"><i class="fa fa-leaf"></i><span> Recetas dietas </span></a>
                        </li>

                        @if (usuario.TIPO_USUARIO.IDTIPOUSUARIO == 1)
                        {
                            <li>
                                <a href="~/Usuario" id="Indice8" class="text-warning waves-effect"><i class="ti ti-crown"></i><span> Membresía </span></a>
                            </li>
                        }

                    </ul>
                    <div class="clearfix"></div>
                </div>
                <!-- Sidebar -->
                <div class="clearfix"></div>

            </div>

        </div>

        <div class="content-page">

            @RenderBody()

            <footer class="footer text-right">
                2021 © Bumer Solutions.
            </footer>

        </div>

        <!-- ============================================================== -->
        <!-- End Right content here -->
    </div>
    <!-- END wrapper -->



    <script>
        var resizefunc = [];
    </script>

    <!-- jQuery  -->
    <script src="~/Source/User/js/jquery.min.js"></script>
    <script src="~/Source/User/js/bootstrap.min.js"></script>
    <script src="~/Source/User/js/detect.js"></script>
    <script src="~/Source/User/js/fastclick.js"></script>
    <script src="~/Source/User/js/jquery.slimscroll.js"></script>
    <script src="~/Source/User/js/jquery.blockUI.js"></script>
    <script src="~/Source/User/js/waves.js"></script>
    <script src="~/Source/User/js/jquery.nicescroll.js"></script>
    <script src="~/Source/User/js/jquery.scrollTo.min.js"></script>
    <script src="~/Source/User/plugins/jquery-knob/jquery.knob.js"></script>

    <!-- isotope filter plugin -->
    <script type="text/javascript" src="~/Source/User/plugins/isotope/dist/isotope.pkgd.min.js"></script>

    <!-- Popup en los ejercicios -->
    <script type="text/javascript" src="~/Source/User/plugins/magnific-popup/dist/jquery.magnific-popup.min.js"></script>

    <!-- App js -->
    <script src="~/Source/User/js/jquery.core.js"></script>
    <script src="~/Source/User/js/jquery.app.js"></script>

    <!-- Jquery-Ui -->
    <script src="~/Source/User/plugins/jquery-ui/jquery-ui.min.js"></script>

    <!-- BEGIN PAGE SCRIPTS -->
    <script src="~/Source/User/plugins/moment/moment.js"></script>
    <script src='~/Source/User/plugins/fullcalendar/dist/fullcalendar.min.js'></script>
    <script src="~/Source/User/pages/jquery.fullcalendar.js"></script>

    <!-- Count down js -->
    <script src="~/Source/User/plugins/count-down/jquery.lwtCountdown-1.0.js"></script>

    <!-- Editar usuario -->
    <script src="~/Source/js/EditarUsuario.js"></script>




    <!-- Modal para editar el usuario -->

    <div id="con-close-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title">Datos de usuario</h4>
                </div>

                @using (Html.BeginForm("Guardar", "Usuario", FormMethod.Post, new { id = "frm-usuario" }))
                {
                    @Html.HiddenFor(x => usuario.ID_USUARIO)

                    @Html.HiddenFor(x => usuario.FECHA_CREACION)
                    @Html.HiddenFor(x => usuario.TELEFONO)
                    @Html.HiddenFor(x => usuario.EDAD)
                    @Html.HiddenFor(x => usuario.EMAIL)
                    @Html.HiddenFor(x => usuario.ID_TIPOUSUARIO)
                    @Html.HiddenFor(x => usuario.ID_MEMBRESIA)

                    //Tengo que validarlo al guardarlo
                    @Html.HiddenFor(x => usuario.PASSWORD)

                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.Label("Nombres", new { @class = "control-label" })
                                    @Html.TextBoxFor(x => usuario.NOMBRE, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => usuario.NOMBRE, null, new { @class = "label label-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.Label("Apellidos", new { @class = "control-label" })
                                    @Html.TextBoxFor(x => usuario.APELLIDO, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => usuario.APELLIDO, null, new { @class = "label label-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.Label("Direccion", new { @class = "control-label" })
                                    @Html.TextBoxFor(x => usuario.DIRECCION, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => usuario.DIRECCION, null, new { @class = "label label-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.Label("Peso", new { @class = "control-label" })
                                    @Html.TextBoxFor(x => usuario.PESO, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => usuario.PESO, null, new { @class = "label label-danger" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.Label("Estatura", new { @class = "control-label" })
                                    @Html.TextBoxFor(x => usuario.ESTATURA, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => usuario.ESTATURA, null, new { @class = "label label-danger" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.Label("Tipo", new { @class = "control-label" })
                                    <input type="text" class="form-control" value="@usuario.TIPO_USUARIO.DESCRIPCION" readonly>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-info waves-effect waves-light">Guardar Cambios</button>
                    </div>
                }

            </div>
        </div>
    </div><!-- /.modal -->

</body>
</html>
