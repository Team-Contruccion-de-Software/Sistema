
@{
    ViewBag.Title = "Videollamada";
    Layout = "~/Views/Shared/LayoutUsuario.cshtml";
}

<link href="~/Source/css/Videollamada/video.css" rel="stylesheet" />

<div class="content">
    <div class="container">

        <div class="row" style="height: 500px;">

            <div class="col-lg-12" style="height: 500px;">
                <div>
                    <div class="col-lg-4 col-md-6">
                        <input class="form-control" placeholder="Ingresar el nombre..." type="text" id="username-input" />
                    </div>
                    
                    <div class="col-lg-8 col-md-6">
                        <button class="btn btn-success" onclick="joinCall()">Ingresar a la llamada</button>
                    </div>
                </div>

                <div id="video-call-div">


                    <video muted id="local-video" autoplay></video>


                    <video id="remote-video" autoplay></video>


                    <div class="call-action-div">
                        <button onclick="muteVideo()">Silenciar</button>
                        <button onclick="muteAudio()">Apagar camara</button>
                    </div>
                </div>

            </div>                

                <script src="~/Source/js/Videollamada/receiver.js"></script>
            </div>
        </div>
</div>