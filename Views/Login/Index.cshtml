
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <!--Jquery-->
    <script src="~/Source/js/Login/jquery-3.5.1.min.js"></script>

    <!--CSS bootstrap-->
    <link href="~/Source/css/Login/bootstrap.min.css" rel="stylesheet" />

    <meta name="viewport" content="width=device-width" />

    <!--Estilos Personales-->
    <link rel="stylesheet" href="~/Source/css/Login/Login.css">
    <link rel="shortcut icon" href="~/Source/images/ggymlogo.png">

    <title>Iniciar Sesion</title>

</head>
<body>

    <div class="vid-container">

        <img src="~/Source/images/dsa-min.jpg" class="bgvid" height="100%" />


        <div class="inner-container">
            <img src="~/Source/images/dsa-min.jpg" class="bgvid inner" height="100%" />

            @using (Html.BeginForm("Validar", "Login", FormMethod.Post))
            {
                <div class="box">

                    <h1>Login</h1>

                    <input type="text" name="Email" placeholder="Email" />

                    <input type="password" name="Contraseña" placeholder="Contraseña" />

                    <button data-ajax="true" type="submit">
                        Iniciar Sesion
                    </button>

                    <p>No eres miembro? <span><a href="~/Login/FormRegistro">Registrarse</a></span></p>

                </div>
            }
        </div>



        <div id="toast3" class="toast" role="alert" aria-live="assertive" data-delay="4000" style="position: absolute; top: 0; right: 0; margin: 10px;">
            <div class="toast-header">
                <img src="~/Source/images/ggymlogo.png" class="rounded mr-2" alt="..." width="10%">
                <strong class="mr-auto">Mensaje del sistema</strong>
                <small>Ahora</small>
                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="toast-body">
                Usuario y/o contraseña incorrectos
            </div>
        </div>

    </div>

    <script src="~/Source/js/Login/bootstrap.min.js"></script>

    <!--ResponseModel-->
    <script src="~/Source/js/Login/ini.js"></script>
    <script src="~/Source/js/Login/jquery.form.js"></script>
    <script src="~/Source/js/Login/jquery.validate.min.js"></script>
    <script src="~/Source/js/Login/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>
